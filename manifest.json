{
  "manifest_version": 2,

  "name": "Tabster",
  "description": "Full text search across Chrome tabs.",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background" : {
    "scripts" : ["js/porter.js", "js/background.js"]
  },
  "content_scripts" : [
    {
      "matches": ["<all_urls>"],
      "css" : ["css/main.css"],
      "js" : ["js/porter.js", "js/content_script.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ]
}
